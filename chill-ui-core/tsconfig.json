{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "useDefineForClassFields": true,
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    // "noPropertyAccessFromIndexSignature": true,
    "strictFunctionTypes": true,
    // "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,

    /* Interopérabilité avec les modules JS */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils": ["src/utils"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@constants": ["src/constants"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "global.d.ts",
    "src/components/select/react-native-element-dropdown/src/components/Dropdown",
    "src/components/select/react-native-element-dropdown/src/components/InputSelectDropdown",
    "src/types/utils/index.ts",
    "src/types/inputDropdown/index.ts"
  ],
  "exclude": [
    "node_modules",
    ".storybook",
    "stories",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "coverage"
  ]
}
