{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "useDefineForClassFields": true,
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    // "noPropertyAccessFromIndexSignature": true,
    "strictFunctionTypes": true,
    // "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,

    /* Interopérabilité avec les modules JS */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }

    /* Types */
    // "types": ["nativewind/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "global.d.ts",
    "scripts/test.js",
    "chill-ui-core/src/types/utils/index.ts",
    "chill-ui-core/src/components/maskedInput/utils/index.s",
    "chill-ui-core/src/components/segmented-control/components/SegmentedControlProvider.tsw",
    "chill-ui-core/src/components/separator/components/Separator.hybrid;tsx"
  ],
  "exclude": ["node_modules"]
}
